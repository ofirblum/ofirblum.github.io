---
import { Icon } from 'astro-icon'
const pathName = Astro.url.pathname;
const isNotHome = pathName !== '/'
---
<nav class="p-4 sm:py-6 sm:px-12 flex items-center sm:text-xl">
  
  <button
      data-color-mode-switch
      class="flex items-center p-1 rounded-md theme-btn hover:bg-slate-300 dark:hover:bg-slate-600"
      >
      <span class="dark:hidden block">
          <Icon name="feather:moon" class="h-5 w-5" aria-hidden="true"/>
      </span>
      <span class="dark:block hidden">
          <Icon name="feather:sun" class="h-5 w-5" aria-hidden="true" />
      </span>
  </button>
  {isNotHome ? (
    <div class="flex flex-1 justify-end items-center">
      <a href="/personal-website/" class="flex items-center transition duration-300 hover:text-cyan-500 dark:hover:text-cyan-200">
        <Icon
          name="carbon:home"
          class="h-6 w-6 sm:h-8 sm:w-8 fill-current" />
      </a>
    </div>
    ) : ( '' )}
  <div class="flex flex-1 justify-end items-center">
    <a href="/personal-website/blog" class="flex items-center transition duration-300 hover:text-cyan-500 dark:hover:text-cyan-200">
      <svg
        class="h-6 w-6 sm:h-8 sm:w-8 mr-1 fill-current"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 92 92"
      >
        <path
          d="M76,2H16c-2.2,0-4,1.8-4,4v80c0,2.2,1.8,4,4,4h60c2.2,0,4-1.8,4-4V6C80,3.8,78.2,2,76,2z M72,82H20V10h52 V82z M28.5,65c0-2.2,1.8-4,4-4h27c2.2,0,4,1.8,4,4s-1.8,4-4,4h-27C30.3,69,28.5,67.2,28.5,65z M29.1,46c0-2.2,1.8-4,4-4h26.3 c2.2,0,4,1.8,4,4s-1.8,4-4,4H33.1C30.9,50,29.1,48.2,29.1,46z M29.1,27c0-2.2,1.8-4,4-4h26.3c2.2,0,4,1.8,4,4s-1.8,4-4,4H33.1 C30.9,31,29.1,29.2,29.1,27z"
        ></path>
      </svg>
  
      <span>Blog</span>
    </a>
  </div>
</nav>